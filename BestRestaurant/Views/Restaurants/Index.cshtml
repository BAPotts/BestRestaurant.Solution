@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1 class="jumbotron">Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added yet.</h3>
}

<ul>
@foreach (Restaurant rest in Model)
{
  <li>@Html.ActionLink($"{rest.Name}", "Details", new { id = rest.RestaurantId}) | Cuisine Type: @*@rest.Cuisine.Name*@</li>
}
</ul>

<p>@Html.ActionLink("Add a new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>